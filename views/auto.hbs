
<main>
    <div class="container car-list mt-3">
        <div class="row justify-content-center mb-4" role="group" aria-label="Car Categories">
            <button type="button" class="btn btn-secondary m-1" id="allCarsBtn">Все авто</button>
            <button type="button" class="btn btn-secondary m-1" id="businessBtn">Бизнес</button>
            <button type="button" class="btn btn-secondary m-1" id="comfortBtn">Комфорт</button>
            <button type="button" class="btn btn-secondary m-1" id="luxuryBtn">Люкс</button>
        </div>

    
        <div class="overflow-auto-car  scrollable-list form border rounded-top-4 rounded-bottom-4 p-4">
            <div class="row p-4">

{{#each cars}}
  <div class="col-lg-4 business-car full-car-card">
                    <div class="card car-card col-12 p-0">                        
                        <img src="{{url}}" alt="{{name}}" class="card-img-top car-image" style="width: 100%;">
                        <div class="card-body car-details d-flex justify-content-between">
                            <h5 class="card-title" style="flex: 1;">{{this.Mark}} {{this.Model}}</h5>
                            <button type="button" class="btn btn-primary" style="flex: 1;">Стоимость: {{this.PriceDay}}/день</button>
                        </div>
                    </div>
                </div>
{{else}}
  <p>No cars available at the moment.</p>
{{/each}}

        <div class="col-md-7">
            <form class="rounded-5 bg-light card p-4">
                <div class="form-group d-flex align-items-center">
                    <label for="fullName" class="flex-grow-1 mb-0 col-3">ФИО</label>
                    <i class="edit-icon ms-2">✏️</i>
                    <input type="text" id="fullName"  value="{{user.FIO}}" class="form-control flex-grow-1 ms-2" disabled>
                    <i class="check-icon ms-2" style="display: none">✅</i>
                </div>
                <div class="form-group d-flex align-items-center">
                    <label for="phoneNumber" class="flex-grow-1 mb-0 col-3">Номер телефона</label>
                    <i class="edit-icon ms-2">✏️</i>
                    <input type="text" id="phoneNumber" value="{{user.PhoneNumber}}" class="form-control flex-grow-1 ms-2" disabled>
                    <i class="check-icon ms-2" style="display: none">✅</i>
                </div>
                <div class="form-group d-flex align-items-center">
                    <label for="email" class="flex-grow-1 mb-0 col-3">Email</label>
                    <i class="edit-icon ms-2">✏️</i>
                    <input type="text" id="email" value="{{user.Email}}" class="form-control flex-grow-1 ms-2" disabled>
                    <i class="check-icon ms-2" style="display: none">✅</i>
                </div>
            <div class="form-group d-flex align-items-center">
                <label for="paymentMethod" class="flex-grow-1 mb-0 col-3">Способ оплаты по умолчанию</label>
                <i class="edit-icon ms-2">✏️</i>
                <select id="paymentMethod" class="form-control flex-grow-1 ms-2">
                    <option value="cash">Наличные</option>
                    <option value="card">Кредитная карта</option>
                </select>
                <input type="text" id="cardNumber" class="form-control flex-grow-1 ms-2" style="display: none;" placeholder="Введите номер карты" disabled>
                <i class="check-icon ms-2" style="display: none">✅</i>
            </div>
                <div class="row">
